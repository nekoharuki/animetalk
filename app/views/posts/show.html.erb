<h1><%=@post.title%>の詳細ページ</h1>

<div>
    <p>タイトル: <%=@post.title%></p>
    <p>ジャンル: <%=@post.genre%></p>
    <p>コメント: <%=@post.content%></p>
    <p>投稿日: <%=@post.created_at%></p>
    <img src="<%= "/post_images/#{@post.image_name}" %>">
</div>

<%=link_to("編集","/posts/#{@post.id}/edit")%>
<%= link_to("削除", "/posts/#{@post.id}/destroy") %>
