<h1>投稿編集</h1>

<%= form_tag("/posts/#{@post.id}/update",{multipart: true}) do %>

<div>
    <label for="title">名前</label>
    <input type="text" name="title" id="title" value="<%= @post.title %>" required>
</div>

<div>
    <label for="genre" class="form-label">ジャンル</label>
    <select class="form-select" name="genre" id="genre">
      <option value="SF" <%= "selected" if @post.genre == "SF" %>>SF</option>
      <option value="アクション" <%= "selected" if @post.genre == "アクション" %>>アクション</option>
      <option value="コメディー" <%= "selected" if @post.genre == "コメディー" %>>コメディー</option>
    </select>
</div>

<div>
    <label for="content">内容</label>
    <textarea rows="10" cols="50" name="content" id="content" required><%= @post.content %></textarea>
  </div> 

  <div>
  <label for="point">点数</label>
  <input type="number" id="point" name="point" value="<%=@post.point%>" required>
  </div>


  <div>
  <label for="image">画像</label>
  <input name="image" type="file" required>
  </div>
  

  <input type="submit" value="更新">
<% end %> 
<br>
<div>
  <%= link_to("詳細ページへ", "/posts/#{@post.id}/show") %>
</div>